{
  "name": "risk",
  "private": true,
  "workspaces": ["packages/*", "web"],
  "scripts": {
    "dev": "bun run scripts/dev.ts",
    "dev:web": "bun --filter web dev",
    "dev:backend": "convex dev",
    "seed:maps": "bun scripts/seed-maps.ts",
    "lint": "bun --filter web lint",
    "build": "bun --filter risk-engine build && bun --filter web build",
    "typecheck": "tsc --build && tsc -p convex/tsconfig.json",
    "test": "bun test",
    "check": "bun run typecheck && bun run lint && bun run test && bun run build"
  },
  "dependencies": {
    "@convex-dev/better-auth": "^0.10.10",
    "better-auth": "1.4.9",
    "convex": "^1.31.7",
    "convex-helpers": "^0.1.111",
    "resend": "^6.9.1",
    "risk-engine": "workspace:*",
    "risk-maps": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "typescript": "^5.7.0"
  }
}
